            android:layout_width="940px"
            android:layout_height="wrap_content"
            android:layout_marginStart="105px"
            android:layout_marginTop="550px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/bordes" />


        <ImageView

            android:id="@+id/plantilla"
            android:layout_width="940px"
            android:layout_height="wrap_content"
            android:layout_marginStart="105px"
            android:layout_marginTop="550px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/plantilla"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textplantilla"
            android:layout_width="wrap_content"
